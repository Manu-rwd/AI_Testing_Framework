{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "dist/server",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": ["server/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}


